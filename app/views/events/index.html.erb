<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th class='text-uppercase'><%= model_class.human_attribute_name(:url) %></th>
      <th class='text-uppercase'><%= model_class.human_attribute_name(:type) %></th>
      <th class='text-uppercase'><%= model_class.human_attribute_name(:topic) %></th>
      <th class='text-uppercase'>
        <%= t 'sent_at' %>
        <i class="fa fa-long-arrow-down"></i>
      </th>
      <th class='text-uppercase'><%= t 'received_at' %></th>
      <th class='text-uppercase'><%= t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.url, event_path(event) %></td>
        <td><%= event.type %></td>
        <td><%= event.topic %></td>
        <td><%=l Time.at(event.t / 1000) %></td>
        <td><%=l event.created_at %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @events %>
