<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @event.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @event.type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:topic) %>:</strong></dt>
  <dd><%= @event.topic %></dd>
  <dt><strong><%= model_class.human_attribute_name(:t) %>:</strong></dt>
  <dd><%= @event.t %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              events_path, :class => 'btn btn-default'  %>
